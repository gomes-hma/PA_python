        "import random\n",
        "\n",
        "palavras = [\"amor\", \"praia\", \"feliz\", \"sonho\", \"tarde\", \"mundo\", \"agua\", \"vento\", \"papel\", \"luzes\", \"rosto\", \"casa\", \"chave\", \"flor\", \"ritmo\", \"canto\", \"janela\", \"grama\", \"molho\"]\n",
        "\n",
        "def jogar_forca():\n",
        "    palavra = random.choice(palavras)\n",
        "    letras_corretas = set()\n",
        "    letras_erradas = set()\n",
        "    tentativas = 6\n",
        "\n",
        "    print(\"JOGO DA FORCA\")\n",
        "\n",
        "    while tentativas > 0:\n",
        "        exibicao = \"\".join([letra if letra in letras_corretas else \"_\" for letra in palavra])\n",
        "        print(\"\\nPalavra:\", exibicao)\n",
        "        print(\"Erros:\", \" \".join(sorted(letras_erradas)))\n",
        "        print(\"Tentativas restantes:\", tentativas)\n",
        "\n",
        "        if \"_\" not in exibicao:\n",
        "            print(\"\\n Você venceu A palavra era:\", palavra)\n",
        "            return\n",
        "\n",
        "\n",
        "        chute = input(\"Digite uma letra: \").lower()\n",
        "\n",
        "\n",
        "        if len(chute) != 1 or not chute.isalpha():\n",
        "            print(\"Digite apenas UMA letra válida seu animal.\")\n",
        "            continue\n",
        "\n",
        "\n",
        "        if chute in palavra:\n",
        "            if chute not in letras_corretas:\n",
        "                letras_corretas.add(chute)\n",
        "            else:\n",
        "                print(\"Você já tentou essa letra.\")\n",
        "        else:\n",
        "            if chute not in letras_erradas:\n",
        "                letras_erradas.add(chute)\n",
        "                tentativas -= 1\n",
        "            else:\n",
        "                print(\"Você já errou essa letra antes.\")\n",
        "\n",
        "    print(\"\\n Você perdeu e palavra era:\", palavra)\n",
        "\n",
        "jogar_forca()\n",
        "\n"
      ]
    }
  ]
